<!-- Loop over each object in the projects array -->
<div class="container col-xl-12 col-xxl-8 px-4 py-5 bg-light">
  <div class="row justify-content-center align-items-center g-5 py-5">
    <div class="col-lg-7 text-center text-lg-start">
      <h1 class="display-4 mb-3"> {{#if logged_in}}
        <h1 class="display-5">Welcome
          {{#if freelancer}}
          Freelancer!</h1>
        {{else}}
        Client!
      </h1>
      {{/if}}
      {{else}}
      <h1>Welcome! Please login or signup!</h1>
      <form class="p-4 p-md-5 border rounded-3 bg-light">
        <div class="mb-3">
          <label for="validationCustom04" class="form-label">What tier user are you?</label>
          <select class="form-select" id="validationCustom04" required>
            <option selected disabled value="">Choose...</option>
            <option value="false">Client</option>
            <option value="true">Freelancer</option>
          </select>
          </div>
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          </div>
          <div class="checkbox mb-3">
          </div>
          <button class="w-100 btn btn-lg btn-accent text-light" type="submit">Sign up</button>
          <hr class="my-4">
          <small "text-muted">If you already have an account click <span><a class="accent"
                href="/login">here</a></span></small>
      </form>
      {{/if}}</h1>
      {{#if freelancer}}
      <div class="justify-content-center col-lg-12 fs-4" id="frelancer-welcome">
        <p>At FreelanR, you can view available projects to
          bid on and submit bids for a project of your choosing. Review the projects below to pick your next bidding
          opportunity.</p>
      </div>
      {{else}}
      <button type="button" onclick=window.location.href='/profile/' class="btn btn-accent m-2 text-light">Create
        Project</button>
      {{/if}}
    </div>

    {{#if logged_in}}
    <div class="col-10 mx-auto col-lg-5">
      {{#if freelancer}}
      {{!-- <div> Welcome, Freelancer! At FreelanR, you can view available projects to
        bid on and submit bids for a project of your choosing! </div> --}}
      {{else}}
      {{#if projects.length}}
      <div class="col-md-8 ">
        <h3>Current Projects:</h3>

        {{#each projects as |project|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
        {{/if}}

        {{/if}}
      </div>
    </div>
    {{/if}}


  </div>
</div>
</div>



{{#each projects as |project| }}
<ol class=" col-xl-12 col-xxl-8  m-0 ">
  <li class="list-group-item  justify-content-between align-items-start bg-light">
    <div class="ms-2 me-auto ">
      <div class="h2 accent"><a href="/project/{{project.id}}">{{project.name}}</a></div>
      {{project.description}}
    </div>
    <span class="badge btn-accent rounded-pill"><span for="img" aria-label="money">Bidding starts at: ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount project.starting_price}}</span><span>!</span>
      <span class="badge btn-accent rounded-pill">Created by {{project.user.name}} on {{format_date
        project.date_created}}</span>
  </li>
</ol>
{{/each}}