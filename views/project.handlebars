


<div class="text-center">
  <h2>{{project.name}}</h2>
  <p>{{project.description}}</p>
  <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  {{#if project.user.freelancer}}
  <button type="button" onclick=window.location.href='/addBid/' class="btn btn-accent m-2 text-light">Create Bid</button>
  {{else}}
  <button type="button" data-id="{{project.id}}" class="btn btn-accent m-2 deleteProject text-light">Delete Project</button>
    {{/if}}
    <section>
      {{#each project.bids as |bid|}}
      {{> bid-details}}
      {{/each}}
    </section>
<canvas id="myChart" width="1600" height="900"></canvas>
</div>

<script>
var bidAxis = [];
var nameAxis = [];

{{#each project.bids as |bid|}}
var nameValue = {{bid.id}};
nameAxis.push(nameValue);
bidAxis.push({{bid.amount}})
{{/each}}

    var ctx = document.getElementById("myChart");
    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: nameAxis,
        datasets: [{
          label: 'Bid Comparisons',
          data: bidAxis,
          backgroundColor: [
            '#a239ca',
            '#a239ca',
            '#a239ca'
          ],
        }]
      }
    })
  
</script>


<script src="/js/profile.js"></script>
<script src="/js/delete.js"></script>